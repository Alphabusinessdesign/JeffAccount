<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/loginpage"
    tools:context=".ui.home.supplier.SupplierFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/supplier_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_margin="16dp"/>
    <TextView
        android:id="@+id/no_supplier_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/currently_you_don_t_have_any_supplier"
        android:visibility="gone"
        android:textColor="@android:color/white"
        android:layout_gravity="center"
        style="@style/TextAppearance.AppCompat.Title"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/supplier_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_white_24dp"
        style="@style/Jeff.Fab"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>