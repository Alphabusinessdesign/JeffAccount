<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="purchase"
            type="com.example.jeffaccount.model.PurchasePost" />
        <variable
            name="clickListener"
            type="com.example.jeffaccount.ui.home.purchase.PurchaseClickListener" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/p_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="8dp"
        app:cardElevation="6dp"
        android:onClick="@{()->clickListener.purchaseItemClick(purchase)}"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/p_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent">

            <TextView
                android:id="@+id/p_textView46"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{purchase.customerName}"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="@+id/textView45"
                app:layout_constraintStart_toStartOf="@+id/textView45"
                app:layout_constraintTop_toBottomOf="@+id/textView45" />

            <TextView
                android:id="@+id/p_textView30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Job No."
                android:textColor="@android:color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/p_textView31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Quotation No."
                android:textColor="@android:color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/purchase_job_no" />

            <TextView
                android:id="@+id/p_textView32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Vat%"
                android:textColor="@android:color/white"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/p_textView44" />

            <TextView
                android:id="@+id/p_textView33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Date"

                android:textColor="@android:color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/p_textView43" />

            <TextView
                android:id="@+id/p_textView34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Supplier Name"
                android:textColor="@android:color/white"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView45" />

            <TextView
                android:id="@+id/p_textView35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Special Instruction"
                android:textColor="@android:color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/p_textView46" />

            <TextView
                android:id="@+id/p_textView36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Item Description"
                android:textColor="@android:color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/p_textView48" />

            <TextView
                android:id="@+id/p_textView37"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Payment Method"
                android:textColor="@android:color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/p_textView47" />

            <TextView
                android:id="@+id/p_textView38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Quantity"
                android:textColor="@android:color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/p_textView49" />

            <TextView
                android:id="@+id/p_textView39"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Advance Amount"
                android:textColor="@android:color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/p_textView51" />

            <TextView
                android:id="@+id/p_textView40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Discount Amount"
                android:textColor="@android:color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/p_textView53" />

            <TextView
                android:id="@+id/p_textView41"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Unit Amount"
                android:textColor="@android:color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/p_view6" />

            <TextView
                android:id="@+id/purchase_job_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="@{purchase.jobNo}"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/p_textView35"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/p_textView43"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{String.valueOf(purchase.vat)}"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="@+id/p_textView44"
                app:layout_constraintStart_toStartOf="@+id/p_textView44"
                app:layout_constraintTop_toBottomOf="@+id/p_textView44" />

            <TextView
                android:id="@+id/p_textView44"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{purchase.quotationNo}"
                android:textColor="@android:color/white"

                app:layout_constraintEnd_toEndOf="@+id/purchase_job_no"
                app:layout_constraintStart_toStartOf="@+id/purchase_job_no"
                app:layout_constraintTop_toBottomOf="@+id/purchase_job_no" />

            <TextView
                android:id="@+id/textView45"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{purchase.date}"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="@+id/p_textView43"
                app:layout_constraintStart_toStartOf="@+id/p_textView43"
                app:layout_constraintTop_toBottomOf="@+id/p_textView43" />

            <TextView
                android:id="@+id/p_textView47"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{purchase.itemDescription}"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="@+id/p_textView48"
                app:layout_constraintStart_toStartOf="@+id/p_textView48"
                app:layout_constraintTop_toBottomOf="@+id/p_textView48" />

            <TextView
                android:id="@+id/p_textView48"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{purchase.specialInstruction}"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="@+id/p_textView46"
                app:layout_constraintStart_toStartOf="@+id/p_textView46"
                app:layout_constraintTop_toBottomOf="@+id/p_textView46" />

            <TextView
                android:id="@+id/p_textView49"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{purchase.paymentMethod}"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="@+id/p_textView47"
                app:layout_constraintStart_toStartOf="@+id/p_textView47"
                app:layout_constraintTop_toBottomOf="@+id/p_textView47" />

            <TextView
                android:id="@+id/p_textView50"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{String.valueOf(purchase.quantity)}"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="@+id/p_textView49"
                app:layout_constraintStart_toStartOf="@+id/p_textView49"
                app:layout_constraintTop_toBottomOf="@+id/p_textView49" />

            <TextView
                android:id="@+id/p_textView51"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{String.valueOf(purchase.unitAmount)}"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="@+id/p_textView50"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/p_textView50"
                app:layout_constraintTop_toBottomOf="@+id/p_view6" />

            <TextView
                android:id="@+id/p_textView52"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{String.valueOf(purchase.discountAmount)}"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="@+id/p_textView53"
                app:layout_constraintStart_toStartOf="@+id/p_textView53"
                app:layout_constraintTop_toBottomOf="@+id/p_textView53" />

            <TextView
                android:id="@+id/p_textView53"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{String.valueOf(purchase.advanceAmount)}"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="@+id/p_textView51"
                app:layout_constraintStart_toStartOf="@+id/p_textView51"
                app:layout_constraintTop_toBottomOf="@+id/p_textView51" />

            <TextView
                android:id="@+id/p_textView54"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Total Amount"
                android:textColor="@android:color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/p_view5" />

            <View
                android:id="@+id/p_view6"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/p_textView38" />

            <View
                android:id="@+id/p_view5"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/p_textView52" />

            <TextView
                android:id="@+id/p_textView55"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="32dp"
                android:text="@{String.valueOf(purchase.totalAmount)}"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/p_textView52"
                app:layout_constraintStart_toStartOf="@+id/p_textView52"
                app:layout_constraintTop_toBottomOf="@+id/p_view5" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>